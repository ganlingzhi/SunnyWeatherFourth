<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="327dp"
    android:layout_marginTop="22dp"
    android:background="@drawable/bg_common_radius10"
    android:layout_height="118dp">

    <ImageView
        android:id="@+id/job_choose_bottom_item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_job_choose_first_item" />

    <TextView
        android:id="@+id/job_choose_bottom_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要找实习"
        android:textColor="#ff555555"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/job_choose_bottom_item_image"
        app:layout_constraintTop_toTopOf="@id/job_choose_bottom_item_image"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/job_choose_bottom_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#A5A5A5"
        android:text="找份实习历练一下"
        app:layout_constraintStart_toStartOf="@id/job_choose_bottom_item_title"
        app:layout_constraintTop_toBottomOf="@id/job_choose_bottom_item_title"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/job_choose_bottom_item_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="142dp"
        android:layout_height="58dp"
        android:src="@drawable/bg_job_choose_type_bottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>